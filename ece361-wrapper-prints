#!/bin/bash

function command_desc() {
    echo -e "\e[1;33;40m$1\e[0m"
    read -p "Press [Enter] key to continue..."
}

function green() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;32;40m${STRING}\e[0m"
}

function blue() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;34;40m${STRING}\e[0m"
}

function yellow() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;33;40m${STRING}\e[0m"
}

function red() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;31;40m${STRING}\e[0m"
}

function green_title() {
    echo
    echo "======================================================"
    echo -e "\e[1;92;40m$1\e[0m"
    echo "------------------------------------------------------"
}

function blue_title() {
    echo
    echo "======================================================"
    echo -e "\e[1;94;40m$1\e[0m"
    echo "------------------------------------------------------"
}

function bold_green() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;92;40m$1\e[0m"
}

function bold_blue() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;94;40m$1\e[0m"
}

function bold_yellow() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;93;40m$1\e[0m"
}

function bold_red() {
    if [ "$1" = "-n" ]; then
        STRING=$2
        FLAGS=-ne
    else
        STRING=$1
        FLAGS=-e
    fi
    echo $FLAGS "\e[1;91;40m$1\e[0m"
}

